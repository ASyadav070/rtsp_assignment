# ===========================================
# RTSP Overlay Server - Environment Variables
# ===========================================
# Copy this file to .env and update values as needed

# MongoDB Configuration
# Default: mongodb://localhost:27017/
MONGO_URI=mongodb://localhost:27017/

# MongoDB Database Name
# Default: rtsp_overlay_db
MONGO_DB_NAME=rtsp_overlay_db

# Flask Debug Mode (True/False)
# Default: True
FLASK_DEBUG=True

# Flask Secret Key (change in production!)
SECRET_KEY=your-secret-key-here

# CORS Allowed Origins (comma-separated)
# Default: http://localhost:3000,http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# FFmpeg Path (optional - uses system PATH by default)
# Only set this if FFmpeg is not in your system PATH
# Windows example: C:\ffmpeg\bin\ffmpeg.exe
# macOS/Linux example: /usr/local/bin/ffmpeg
# FFMPEG_PATH=/path/to/ffmpeg
